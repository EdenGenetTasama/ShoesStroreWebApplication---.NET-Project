@using ShoesStroreWebApplication__.NET_Project.Models;

<h2 class="ShoesHeader">OnlyKidesClothes</h2>


<link href="@Url.Content("~/Content/shoe.css")" rel="stylesheet" type="text/css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&family=Lobster&family=Neonderthaw&display=swap" rel="stylesheet">



<div>

    <div class="cardContainer">
        @foreach (clothing item in @ViewBag.KidsCloth)
        {
            <div class="cardDiv">
                <img src=@item.linkToClothing class="imageInCard">
                <h4 class="shoeInfo">@item.clothingType @item.clothingModel</h4>
                <p class="priceAndCompanyInfo">
                    @item.clothingPrice$  @item.clothingCompany
                </p>

            </div>
        }
    </div>
</div>