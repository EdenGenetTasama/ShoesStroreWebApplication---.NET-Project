@using ShoesStroreWebApplication__.NET_Project.Models;
@{
    ViewBag.Title = "GetOnlyShortsShirts";
}
<link href="@Url.Content("~/Content/shoe.css")" rel="stylesheet" type="text/css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&family=Lobster&family=Neonderthaw&display=swap" rel="stylesheet">


<h2 class="ShoesHeader">Only Short Shirts</h2>
<div class="DivOfButtons">
    <a href="@Url.Action("ShirtsPage","Shirts")"><button class="btn btn-success me-md-2 btn-lg active" type="button">All Shirts</button></a>
    <a href="@Url.Action("MangerTableShirts","Shirts")"><button class="btn btn-success me-md-2 btn-lg active" type="button">Manger Mode</button></a>
    <a href="@Url.Action("GetOnlyLongShirts","Shirts")"><button class="btn btn-success me-md-2 btn-lg active" type="button">Long Shirts</button></a>
    <a href="@Url.Action("GetOnlyDryFitShirts","Shirts")"><button class="btn btn-success me-md-2 btn-lg active" type="button">DryFit Only</button></a>
    <a href="@Url.Action("SortByPrice","Shirts")"><button class="btn btn-success me-md-2 btn-lg active" type="button">Sort</button></a>
</div>

<div>
    <div class="cardContainer">
        @foreach (clothing item in @ViewBag.onlyShortShirts)
        {
            <div class="cardDiv">
                <img src=@item.linkToClothing class="imageInCard">
                <h4 class="shoeInfo">@item.clothingType @item.clothingModel</h4>
                <p class="priceAndCompanyInfo">
                    @item.clothingPrice$  @item.clothingCompany
                </p>

            </div>
        }
    </div>
</div>

