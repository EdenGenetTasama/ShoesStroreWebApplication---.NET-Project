@using ShoesStroreWebApplication__.NET_Project.Models;
@{
    ViewBag.Title = "MangerTable";
}
<link href="@Url.Content("~/Content/mangerTable.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/shoe.css")" rel="stylesheet" type="text/css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&family=Lobster&family=Neonderthaw&display=swap" rel="stylesheet">


<h2 class="ShoesHeader">Manger Shirts Table</h2>
<div class="DivOfButtons">
    <a href="@Url.Action("ShirtsPage","Shirts")"><button class="btn btn-success me-md-2 btn-lg active" type="button">All Shirts</button></a>
    <a href="@Url.Action("GetOnlyLongShirts","Shirts")"><button class="btn btn-success me-md-2 btn-lg active" type="button">Long Shirts</button></a>
    <a href="@Url.Action("GetOnlyShortShirts","Shirts")"><button class="btn btn-success me-md-2 btn-lg active" type="button">Short Shirts</button></a>
    <a href="@Url.Action("GetOnlyDryFitShirts","Shirts")"><button class="btn btn-success me-md-2 btn-lg active" type="button">DryFit Only</button></a>
    <a href="@Url.Action("SortByPrice","Shirts")"><button class="btn btn-success me-md-2 btn-lg active" type="button">Sort</button></a>
</div>
<div>
    <table id="TableId">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>Id</th>
                <th>Company</th>
                <th>Gender</th>
                <th>Shirt</th>
                <th>Model</th>
                <th>Is Short? Is Dryfit?</th>
                <th>Price</th>
                <th>Amount</th>

            </tr>
        </thead>
        <tbody>
            @foreach (clothing item in @ViewBag.AllShirtsToTable)
            {
                <tr>
                    <td><img src="@item.linkToClothing" class="imageInTable" /></td>
                    <td>@item.Id</td>
                    <td>@item.clothingCompany</td>
                    <td>@item.clothingGender</td>
                    <td>@item.clothingType</td>
                    <td>@item.clothingModel</td>
                    <td>@item.isClothingShort , @item.isClothingDrifit</td>
                    <td>@item.clothingPrice$</td>
                    <td>@item.clothingAmount</td>

                </tr>
            }

        </tbody>


    </table>
</div>

