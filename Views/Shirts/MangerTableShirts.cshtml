@using ShoesStroreWebApplication__.NET_Project.Models;
@{
    ViewBag.Title = "MangerTable";
}
<link href="@Url.Content("~/Content/mangerTable.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/shoe.css")" rel="stylesheet" type="text/css" />

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&family=Neonderthaw&display=swap" rel="stylesheet">


<h2 class="ShoesHeader">Manger Shirts Table</h2>
<div>
    <a class="" href="@Url.Action("ShirtsPage","Shirts")"><button type="button">All Shirts</button></a>
    <a class="" href="@Url.Action("GetOnlyLongShirts","Shirts")"><button type="button">Long Shirts</button></a>
    <a class="" href="@Url.Action("GetOnlyShortShirts","Shirts")"><button type="button">Short Shirts</button></a>
    <a class="" href="@Url.Action("GetOnlyDryFitShirts","Shirts")"><button type="button">DryFit Only</button></a>
    <table id="TableId">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>Gender</th>
                <th>Shirt</th>
                <th>Model</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (clothing item in @ViewBag.AllShirtsToTable)
            {
                <tr>
                    <td><img src="@item.linkToClothing" class="imageInTable" /></td>
                    <td>@item.clothingGender</td>
                    <td>@item.clothingType</td>
                    <td>@item.clothingModel</td>
                    <td>@item.clothingPrice $</td>
                </tr>
            }

        </tbody>


    </table>
</div>

