@using ShoesStroreWebApplication__.NET_Project.Models;


<link href="@Url.Content("~/Content/mangerTable.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/shoe.css")" rel="stylesheet" type="text/css" />

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&family=Lobster&family=Neonderthaw&display=swap" rel="stylesheet">

<h2 class="ShoesHeader">Maneger Table Shoe</h2>

<div class="DivOfButtons">
    <a href="@Url.Action("ShoesPage","Shoes")"><button class="btn btn-success me-md-2 btn-lg active" type="button">All shoes</button></a>
    <a href="@Url.Action("ShoesOnSale","Shoes")"><button class="btn btn-success me-md-2 btn-lg active" type="button">Sale only</button></a>
</div>
<div>
    <table id="TableId">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>Id</th>
                <th>Company</th>
                <th>Shoe</th>
                <th>Model</th>
                <th>Price</th>
                <th>Sale?</th>
                <th>Amount</th>

            </tr>
        </thead>
        <tbody>
            @foreach (Shoe shoe in @ViewBag.allShoesToTable)
            {
                <tr>
                    <td><img src="@shoe.linkImage" class="imageInTable" /></td>
                    <td>@shoe.Id</td>
                    <td>@shoe.company</td>
                    <td>@shoe.shoeType</td>
                    <td>@shoe.shoeModel</td>
                    <td>@shoe.shoePrice$</td>
                    <td>@shoe.isOnSall</td>
                    <td>@shoe.shoeAmount </td>

                </tr>
            }

        </tbody>


    </table>
</div>
