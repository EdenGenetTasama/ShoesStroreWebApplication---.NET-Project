@using ShoesStroreWebApplication__.NET_Project.Models;


<link href="@Url.Content("~/Content/shoe.css")" rel="stylesheet" type="text/css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&family=Lobster&family=Neonderthaw&display=swap" rel="stylesheet">



<h2 class="ShoesHeader">Shoes Section</h2>
<div>


    <div class="DivOfButtons">
        <a href="@Url.Action("ShoesOnSale","Shoes")"><button class="btn btn-success me-md-2 btn-lg active" type="button">Sale only</button></a>
        <a href="@Url.Action("ManegerTableShoe","Shoes")"><button class="btn btn-success me-md-2 btn-lg active" type="button">Manger Table</button></a>
    </div>


    <div class="cardContainer">
        @foreach (Shoe item in ViewBag.allShoes)
        {
            <div class="cardDiv" class="top-left-Text">
                <img src=@item.linkImage class="imageInCard">
                <h4 class="shoeInfo">@item.shoeType @item.shoeModel</h4>
                <div>
                    @if (@item.isOnSall)
                    {
                        <div class="onOffSaleLine">on sale</div>
                    }
                    else
                    {
                        <div class="onOffSaleLine">not sale</div>
                    }
                </div>
                <p class="priceAndCompanyInfo">
                    @item.shoePrice$  @item.company
                </p>

            </div>
        }
    </div>



</div>


