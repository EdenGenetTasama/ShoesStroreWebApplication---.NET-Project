    <link href="@Url.Content("~/Content/shoe.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <h2>Shoes Section</h2>
    <div>
        <a class="ChangeToSaleOnly" href="@Url.Action("ShoesOnSale","Shoes")">Show me Shoes On Sale only !</a>
        <div class="cardContainer">
            @foreach (Shoe item in ViewBag.allShoes)
            {
                <div class="cardDiv">
                    <img src=@item.linkImage class="imageInCard">
                    <h4 class="shoeInfo">@item.shoeType</h4>
                    <h5 class="shoeInfo"> @item.company</h5>
                    <p class="shoeInfo">
                        @item.shoePrice
                    </p>
                    @if (@item.isOnSall)
                    {
                        <p class="shoeInfo">on salee</p>
                    }

                </div>
            }
        </div>

