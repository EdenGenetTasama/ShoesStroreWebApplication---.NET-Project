
@{
    ViewBag.Title = "ShoesPage";
}


<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Url.Content("~/Content/shoe.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <div>
        @foreach (var item in ViewBag.allShoes)
        {
            <div class="col-md-4">
                <div class="card p-3 mb-2">
                    <div class="d-flex justify-content-between">
                        <div class="d-flex flex-row align-items-center">
                            <div class="icon"> <i class="bx bxl-mailchimp"></i> </div>
                            <div class="ms-2 c-details">
                                <img src=@item.linkImage class="mb-0">
                            </div>
                        </div>
                        <div class="badge"> <span>@if (item.isOnSall)
                        {<span>On Sall!</span>;
                        }  </span> </div>
                    </div>
                    <div class="mt-5">
                        <h3 class="heading">@item.shoeType<br>@item.company</h3>
                        <div class="mt-5">
                            <div class="mt-3"> <span class="text1">@item.shoePrice </span> </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
