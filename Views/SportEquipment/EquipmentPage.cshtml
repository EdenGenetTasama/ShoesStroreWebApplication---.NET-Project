@using ShoesStroreWebApplication__.NET_Project.Models;

@{
    ViewBag.Title = "EquipmentPage";
}

<h2 class="ShoesHeader">Equipment Page</h2>




<link href="@Url.Content("~/Content/shoe.css")" rel="stylesheet" type="text/css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&family=Lobster&family=Neonderthaw&display=swap" rel="stylesheet">


<div>
    <div class="DivOfButtons">
        <a class="ChangeToSaleOnly" href="@Url.Action("MangerMode","sportEquipment")"><button class="btn btn-success me-md-2 btn-lg active" type="button">Manger Table</button></a>
        <a class="ChangeToSaleOnly" href="@Url.Action("OnlyBaskBallEquipment","sportEquipment")"><button type="button" class="btn btn-success me-md-2 btn-lg active">Only Basketball</button></a>
        <a class="ChangeToSaleOnly" href="@Url.Action("OnlyFootballEquipment","sportEquipment")"><button type="button" class="btn btn-success me-md-2 btn-lg active">Only Football</button></a>
        <a class="ChangeToSaleOnly" href="@Url.Action("SortEquipment","sportEquipment")"><button type="button" class="btn btn-success me-md-2 btn-lg active">Only Football</button></a>

    </div>


    <div class="cardContainer">
        @foreach (sportEquipment item in ViewBag.allEquipment)
        {
            <div class="cardDiv">
                <img src=@item.linkToImage class="imageInCard">
                <h4 class="shoeInfo">@item.productName @item.sportBranch</h4>
                <p class="priceAndCompanyInfo">
                    @item.productPrice$  @item.productCompany
                </p>

            </div>
        }
    </div>



</div>


